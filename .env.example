# Grimnir Radio example environment

GRIMNIR_ENV=development
GRIMNIR_HTTP_BIND=0.0.0.0
GRIMNIR_HTTP_PORT=8080

# Database: choose one backend
GRIMNIR_DB_BACKEND=sqlite
GRIMNIR_DB_DSN=file:dev.sqlite?_foreign_keys=on

# Media and object storage
GRIMNIR_MEDIA_ROOT=./media
GRIMNIR_OBJECT_STORAGE_URL=

# Auth
GRIMNIR_JWT_SIGNING_KEY=dev-secret-change-me

# Scheduler
GRIMNIR_SCHEDULER_LOOKAHEAD_MINUTES=48

# Metrics
GRIMNIR_METRICS_BIND=127.0.0.1:9000

# Webstream defaults
GRIMNIR_WEBSTREAM_ALLOWED_SCHEMES=http,https
GRIMNIR_WEBSTREAM_CONNECT_TIMEOUT_MS=5000
GRIMNIR_WEBSTREAM_READ_TIMEOUT_MS=15000
GRIMNIR_WEBSTREAM_RECONNECT_BACKOFF_MS=1000
GRIMNIR_WEBSTREAM_PREFLIGHT_MS=3000
GRIMNIR_WEBSTREAM_GRACE_MS=5000
GRIMNIR_WEBSTREAM_FALLBACK_LIMIT=3
